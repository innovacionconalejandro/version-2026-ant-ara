  <script>
    // A√±o din√°mico
    document.getElementById('year').textContent = new Date().getFullYear();

    // Contenidos de cursos para modal
    const modalData = {
      aifpc: {
        title: 'AIFPC¬Æ ‚Äî Automatizaci√≥n para PYMEs',
        text: 'Mapeo de procesos, selecci√≥n de herramientas y creaci√≥n de flujos que ahorran horas semanales.'
      },
      gaipc: {
        title: 'GAIPC¬Æ ‚Äî Dashboards con IA',
        text: 'M√©tricas que importan, narrativa visual y tableros que conectan datos con decisiones.'
      },
      aipmfpc: {
        title: 'AIPMFPC‚Ñ¢ ‚Äî √âtica aplicada a IA',
        text: 'Dilemas reales de sesgo, privacidad y transparencia con marcos de decisi√≥n responsables.'
      },
      smpc: {
        title: 'SMPC¬Æ ‚Äî Productividad personal con IA',
        text: 'Organizaci√≥n, foco y h√°bitos sostenibles sin sobrecarga digital usando IA como apoyo.'
      }
    };

    const modal = document.getElementById('modal');
    const modalTitle = document.getElementById('modalTitle');
    const modalText = document.getElementById('modalText');
    const closeModal = document.getElementById('closeModal');

    document.querySelectorAll('[data-open]').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        const key = btn.getAttribute('data-open');
        const d = modalData[key];
        if(d){ modalTitle.textContent = d.title; modalText.textContent = d.text; }
        modal.classList.remove('hidden'); modal.classList.add('flex');
      });
    });

    closeModal.addEventListener('click', ()=>{ modal.classList.add('hidden'); modal.classList.remove('flex'); });
    modal.addEventListener('click', (e)=>{ if(e.target===modal.firstElementChild){ modal.classList.add('hidden'); modal.classList.remove('flex'); } });

    // FAQ acorde√≥n
    document.querySelectorAll('.faq-q').forEach(q=>{
      q.addEventListener('click', ()=>{
        const parent = q.parentElement;
        const a = parent.querySelector('.faq-a');
        const icon = q.querySelector('svg');
        const open = !a.classList.contains('hidden');
        document.querySelectorAll('#faq .faq-a').forEach(el=>el.classList.add('hidden'));
        document.querySelectorAll('#faq .faq-q svg').forEach(el=>el.classList.remove('rotate-90'));
        if(open){ a.classList.add('hidden'); }
        else { a.classList.remove('hidden'); icon.classList.add('rotate-90'); }
      });
    });

    // Form demo
    function handleDemoSubmit(e){
      e.preventDefault();
      const res = document.getElementById('formResult');
      res.classList.remove('hidden');
      e.target.reset();
      res.scrollIntoView({behavior:'smooth', block:'center'});
    }
    window.handleDemoSubmit = handleDemoSubmit;
  </script>
